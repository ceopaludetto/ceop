{
	"name": "root",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/ceopaludetto/ceop"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"lint": "turbo run lint",
		"prepare": "husky install",
		"publish": "turbo run publish",
		"start": "turbo run start --parallel",
		"test": "turbo run test -- --coverage"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"husky": "^7.0.2",
		"prettier": "^2.4.1",
		"prettier-plugin-packagejson": "^2.2.13",
		"tsdx": "^0.14.1",
		"tslib": "^2.3.1",
		"turbo": "^1.0.9",
		"typescript": "^4.4.3"
	},
	"changelog": {
		"labels": {
			"feat": "Feature",
			"bug": "Bug Fix"
		}
	},
	"turbo": {
		"baseBranch": "origin/master",
		"pipeline": {
			"lint": {},
			"start": {
				"cache": false
			},
			"build": {
				"outputs": [
					"dist/**"
				],
				"dependsOn": [
					"^build"
				]
			},
			"test": {
				"dependsOn": [
					"build"
				]
			},
			"publish": {
				"dependsOn": [
					"lint",
					"build",
					"test"
				]
			}
		}
	}
}
