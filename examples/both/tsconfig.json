{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "Node",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"noEmitHelpers": true,
		"jsx": "preserve",
		"baseUrl": "src",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
