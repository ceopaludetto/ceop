{
	"packages": ["packages/*"],
	"npmClient": "yarn",
	"useWorkspaces": true,
	"version": "independent",
	"changelogPreset": "angular",
	"command": {
		"version": {
			"allowBranch": "master",
			"message": "chore(release): publish %s"
		},
		"publish": {
			"conventionalCommits": true,
			"allowBranch": "master"
		}
	}
}
